include ../input-form/input-form.pug

mixin subscribe-form (options = false)
    - var blockClassName = "subscribe-form"
    - var blockFullClassName = blockClassName

    - blockFullClassName += options.mix ? (" " + options.mix.block + "__" + options.mix.elem) : ""
    - blockFullClassName += options.mixBlock ? (" " + options.mixBlock) : ""

    form(class = blockFullClassName, action="", method="post")
        div(class = blockClassName + "__input-container")
            +input({
                mix: {
                    block: blockClassName,
                    elem: 'input'
                },
                type: 'email',
                name: 'email',
                placeholder: 'Email',
            })
            +icon({
                mix: {
                    block: blockClassName,
                    elem: "icon"
                },
                mixBlock: "material-icons",
                content: "arrow_forward"
            })
        span(class = blockClassName + "__message")