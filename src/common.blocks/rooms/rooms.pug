include ../title/title.pug
include ../room-card/room-card.pug
include ../pagination/pagination.pug

mixin rooms(options = false)
    - var blockClassName = "rooms"
    - var blockFullClassName = blockClassName

    - blockFullClassName += options.mix ? (" " + options.mix.block + "__" + options.mix.elem) : ""
    - blockFullClassName += options.mixBlock ? (" " + options.mixBlock) : ""

    section(class = blockFullClassName)
        +title({
            mods: { level: 1 },
            content: "Номера, которые мы для вас подобрали"
        })
        div(class = blockClassName + "__list")
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
            +room-card({})
        +pagination({
            mix: {
                block: blockClassName,
                elem: "pagination"
            }
        })