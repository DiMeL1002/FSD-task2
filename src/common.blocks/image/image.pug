mixin image(options = false)
    - var imageClassName = "image"
    - var imageFullClassName = imageClassName

    if (options.mix)
        - imageFullClassName += " " + options.mix.block + "__" + options.mix.elem

    if (options.mixBlock)
        - imageFullClassName += " " + options.mixBlock

    //- html
    img(class = imageFullClassName, src = options.src, alt = options.alt)