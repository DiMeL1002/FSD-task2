include ../input/input.pug
include ../title/title.pug

mixin input-form (options = false)
    - var textFormClassName = "input-form"
    - var textFormFullClassName = textFormClassName

    if (options.mix)
        - textFormFullClassName += " " + options.mix.block + "__" + options.mix.elem

    if (options.mixBlock)
        - textFormFullClassName += " " + options.mixBlock

    div(class = textFormFullClassName)
        +title({
            mix: {
                block: textFormClassName,
                elem: 'title'
            },
            mods: { level: 3 },
            content: options.title
        })
        +input({
            mix: {
                block: textFormClassName,
                elem: 'input'
            },
            mods: {
                type: options.mods.inputType,
                placeholder: options.mods.placeholder,
                focused: options.mods.focused,
                value: options.mods.inputValue,
                theme: options.mods.theme
            }
        })