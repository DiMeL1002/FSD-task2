include ../title/title.pug
include ../input-form/input-form.pug
include ../dropdown/dropdown.pug
include ../subscribe-form/subscribe-form.pug
include ../checkbox-form/checkbox-form.pug
include ../radio-form/radio-form.pug
include ../toggle-form/toggle-form.pug
include ../btn-like/btn-like.pug
include ../rate/rate.pug
include ../button/button.pug

section.form-elements
    +logo({
        mix: { 
            block: "form-elements",
            elem: "logo"
        }
    })
    .form-elements__content
        .form-elements__input-forms-block
            +input-form({
                mods: {
                    placeholder: "Email",
                    inputType: "email",
                },
                title: "Text field"
            })
            +input-form({
                mods: {
                    inputValue: "This is pretty awesome",
                    inputType: "text",
                    focused: true,
                },
                title: "Text field"
            })
            +dropdown({
                mods: {
                    inputValue: "Сколько гостей"
                },
                title: "Dropdown"
            })
            +input-form({
                mods: {
                    placeholder: "ДД.ММ.ГГГГ",
                    inputType: "text",
                },
                title: "Masked text field"
            })
            .form-elements__date-dropdowns
                +dropdown({
                    mods: {
                        inputValue: "ДД.ММ.ГГГГ",
                        size: "s"
                    },
                    title: "Date dropdown"
                })
                +dropdown({
                    mods: {
                        inputValue: "19.08.2019",
                        size: "s"
                    },
                    title: "Date dropdown"
                })
            +dropdown({
                    mix: {
                        block: "form-elements",
                        elem: "dropdown-filter"
                    },
                    mods: {
                        inputValue: "19 авг - 23 авг",
                        size: "m"
                    },
                    title: "filter date dropdown"
            })
            +subscribe-form({
                    mix: {
                        block: "form-elements",
                        elem: "sub"
                    },
                    mods: {
                        inputplaceholderText: "Email",
                        size: "m"
                    },
                    title: "subscription text field"
            })
        .form-elements__small-buttons-block
            +checkbox-form({
                title: "Checkbox buttons",
                items: [
                    {
                        text: "Можно курить",
                    },
                    {
                        text: "Можно с питомцами",
                        checked: true
                    },
                    {
                        text: "Можно пригласить гостей (до 10 человек)",
                        checked: true
                    }
                ]
            })
            +radio-form({
                title: "Radio buttons",
                items: [
                    {
                        text: "Мужчина",
                        checked: true
                    },
                    {
                        text: "Женщина",
                    }
                ]
            })
            .form-elements__toggles
                +title({
                    mods: { level: 3 },
                    content: "Toggle"
                })
                +toggle-form({
                    title: "Получать спецпредложения",
                    checked: true
                })
                +toggle-form({
                    title: "Получать спецпредложения",
                })
            .form-elements__like-buttons
                +title({
                    mods: { level: 3 },
                    content: "like button",
                })
                .form-elements__like-buttons-block
                    +btn-like({
                        total: 2
                    })
                    +btn-like({
                        total: 12,
                        mods: { isActive: true }  
                    })
            .form-elements__rate-buttons
                +title({
                    mods: { level: 3 },
                    content: "rate button"
                })
                .form-elements__rate-buttons-block
                    +rate({
                        count: [ "star_rate", "star_rate", "star_rate", "star_rate", "star_border" ]
                    })
                    +rate({
                        count: [ "star_rate", "star_rate", "star_rate", "star_rate", "star_rate" ]
                    })
        .form-elements__buttons-block
            .form-elements__buttons
                +title({
                    mods: { level: 3 },
                    content: "buttons"
                })
                .form-elements__buttons-body
                    +button({
                        text: "click me"
                    })
                    +button({
                        mods: { hovered: true },
                        text: "click me"
                    })
                    +button({
                        mods: { theme: "border" },
                        text: "click me"
                    })
                    +button({
                        mods: { 
                            theme: "border",
                            hovered: true    
                        },
                        text: "click me"
                    })
                    +button({
                        mods: { theme: "plain" },
                        text: "click me"
                    })
                    +button({
                        mods: { 
                            theme: "plain",
                            pressed: true
                        },
                        text: "click me"
                    })
            +button({
                mix: {
                    block: "form-elements",
                    elem: "button-pay"
                },
                mods: {
                    size: "l",
                    arrow: true
                },
                text: "перейти к оплате"
            })