include ../text-style/text-style.pug
include ../text-form/text-form.pug
include ../dropdown/dropdown.pug
include ../subscribe-form/subscribe-form.pug
include ../checkbox-form/checkbox-form.pug
include ../radio-form/radio-form.pug
include ../toggle-form/toggle-form.pug

section.form-elements
    +logo({elementOfBlock: "form-elements"})
    .form-elements__content
        .form-elements__input-fields
            +text-form({
                elementOfBlock: "form-elements",
                title: "Text field",
                stateDescription: "Default",
                mods: {
                    inputplaceholderText: "Email",
                    inputType: "email",
                }
            })
            +text-form({
                elementOfBlock: "form-elements",
                title: "Text field",
                stateDescription: "Hover/focus",
                mods: {
                    inputValue: "This is pretty awesome",
                    inputType: "text",
                    focused: true,
                }
            })
            +dropdown({
                elementOfBlock: "form-elements",
                title: "Dropdown",
                stateDescription: "Default",
                mods: {
                    inputValue: "Сколько гостей"
                }
            })
            +text-form({
                elementOfBlock: "form-elements",
                title: "Masked text field",
                stateDescription: "Default",
                mods: {
                    inputplaceholderText: "ДД.ММ.ГГГГ",
                    inputType: "text",
                }
            })
            .form-elements__date-dropdowns
                +dropdown({
                    elementOfBlock: "form-elements",
                    title: "Date dropdown",
                    mods: {
                        inputValue: "ДД.ММ.ГГГГ",
                        size: "s"
                    }
                })
                +dropdown({
                    elementOfBlock: "form-elements",
                    title: "Date dropdown",
                    mods: {
                        inputValue: "19.08.2019",
                        size: "s"
                    }
                })
            +dropdown({
                    elementOfBlock: "form-elements",
                    title: "filter date dropdown",
                    mods: {
                        inputValue: "19 авг - 23 авг",
                        size: "m"
                    }
            })
            +subscribe-form({
                    elementOfBlock: "form-elements",
                    title: "subscription text field",
                    mods: {
                        inputplaceholderText: "Email",
                        size: "m"
                    }
            })
        .form-elements__block2
            +checkbox-form({
                elementOfBlock: "form-elements",
                title: "Checkbox buttons",
                items: [
                    {
                        text: "Можно курить",
                    },
                    {
                        text: "Можно с питомцами",
                        checked: true
                    },
                    {
                        text: "Можно пригласить гостей (до 10 человек)",
                        checked: true
                    }
                ]
            })
            +radio-form({
                elementOfBlock: "form-elements",
                title: "Radio buttons",
                items: [
                    {
                        text: "Мужчина",
                        checked: true
                    },
                    {
                        text: "Женщина",
                    }
                ]
            })
            .toggle-block.form-elements__toggle-block
                +text-style({
                    elementOfBlock: "toggle-block",
                    content: "Toggle",
                    textType: "h3"
                })
                +toggle-form({
                    elementOfBlock: "toggle-block",
                    title: "Получать спецпредложения",
                    checked: true
                })
                +toggle-form({
                    elementOfBlock: "toggle-block",
                    title: "Получать спецпредложения",
                })